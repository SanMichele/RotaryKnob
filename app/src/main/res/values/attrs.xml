<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Croller">
        <attr name="enabled" format="boolean" />
        <attr name="start_progress" format="integer" />
        <attr name="label" format="string" />
        <attr name="back_circle_color" format="color" />
        <attr name="back_circle_disable_color" format="color" />
        <attr name="main_circle_color" format="color" />
        <attr name="main_circle_disable_color" format="color" />
        <attr name="indicator_color" format="color" />
        <attr name="indicator_disable_color" format="color" />
        <attr name="progress_primary_color" format="color" />
        <attr name="progress_primary_disable_color" format="color" />
        <attr name="progress_secondary_color" format="color" />
        <attr name="progress_secondary_disable_color" format="color" />
        <attr name="label_size" format="dimension" />
        <attr name="label_color" format="color" />
        <attr name="label_font" format="string" />
        <attr name="label_style" format="enum" >
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="bold_italic" value="3"/>
        </attr>
        <attr name="label_disabled_color" format="color" />
        <attr name="indicator_width" format="float" />
        <attr name="is_continuous" format="boolean" />
        <attr name="progress_primary_circle_size" format="float" />
        <attr name="progress_secondary_circle_size" format="float" />
        <attr name="progress_primary_stroke_width" format="float" />
        <attr name="progress_secondary_stroke_width" format="float" />
        <attr name="sweep_angle" format="integer" />
        <attr name="start_offset" format="integer" />
        <attr name="max" format="integer" />
        <attr name="min" format="integer" />
        <attr name="main_circle_radius" format="float" />
        <attr name="back_circle_radius" format="float" />
        <attr name="progress_radius" format="float" />
        <attr name="anticlockwise" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Knob">
        <attr name="knobSize" format="dimension" />
        <attr name="fillColor" format="color" />
        <attr name="fillStartAngle" format="float" />
        <attr name="fillSweepAngle" format="float" />

        <attr name="trackStrokeColor" format="color" />
        <attr name="trackStrokeWidth" format="dimension" />
        <attr name="trackStrokeCap" format="enum">
            <enum name="butt" value="0" />
            <enum name="round" value="1" />
            <enum name="square" value="2" />
        </attr>
        <attr name="trackStrokeOffset" format="dimension" />

        <attr name="stepCount" format="integer" />
        <attr name="stepDrawable" format="reference" />
        <attr name="stepOffset" format="dimension" />
        <attr name="stepAnchorX" format="fraction" />
        <attr name="stepAnchorY" format="fraction" />

        <attr name="substepCount" format="integer" />
        <attr name="substepDrawable" format="reference" />
        <attr name="substepOffset" format="dimension" />
        <attr name="substepAnchorX" format="fraction" />
        <attr name="substepAnchorY" format="fraction" />

        <attr name="progressMode" format="enum">
            <enum name="continuous" value="0" />
            <enum name="step" value="1" />
            <enum name="substep" value="2" />
        </attr>
        <attr name="maxProgress" format="float" />
        <attr name="progress" format="float" />
        <attr name="progressStrokeColor" format="color" />
        <attr name="progressStrokeWidth" format="dimension" />
        <attr name="progressStrokeCap" format="enum">
            <enum name="butt" value="0" />
            <enum name="round" value="1" />
            <enum name="square" value="2" />
        </attr>
        <attr name="progressStrokeOffset" format="dimension" />
        <attr name="progressStartAngle" format="float" />
        <attr name="progressSweepAngle" format="float" />

        <attr name="thumbDrawable" format="reference" />
        <attr name="thumbOffset" format="dimension" />
        <attr name="thumbAnchorX" format="fraction" />
        <attr name="thumbAnchorY" format="fraction" />
        <attr name="thumbRotation" format="boolean" />

        <attr name="touchThreshold" format="dimension" />
        <attr name="touchOffset" format="dimension" />

        <attr name="debug" format="boolean" />
        <attr name="debug_drawBounds" format="boolean" />
        <attr name="debug_drawTrack" format="boolean" />
        <attr name="debug_drawTouchRadius" format="boolean" />
        <attr name="debug_drawTouchArea" format="boolean" />
    </declare-styleable>
</resources>